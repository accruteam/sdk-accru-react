{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@gql/*": ["api/gql/*"],
      "@gql": ["api/gql"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "scripts", "tests"]
}
