{
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@package": ["./src/index.ts"],
      "@api/*": ["./src/api/*"],
      "@gql/*": ["./src/api/gql/*"],
      "@gql": ["./src/api/gql"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  }
}
