{
  "name": "accru-client",
  "author": "Accru Co.",
  "description": "Client SDK for Accru API",
  "license": "MIT",
  "version": "0.0.48",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/accruteam/sdk-accru-ts.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "start": "./scripts/run.sh",
    "test": "vitest run",
    "lint": "run-p -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:tsc": "tsc --noEmit",
    "deploy": "yarn build && cd dist && npm publish --access public",
    "codegen": "graphql-codegen",
    "codegen:update": "graphql-codegen && yalc publish",
    "codegen:watch": "graphql-codegen -w",
    "sandbox": "yarn link accru-client && node ./tests/sandbox.js && yarn unlink accru-client",
    "service": "node scripts/newService.js",
    "release": "yarn build && changeset publish",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/client": "^3.9.10",
    "apollo-link-scalars": "^4.0.3",
    "graphql": "^16.9.0",
    "react": "^18.2.0"
  },
  "resolutions": {
    "graphql": "16.9.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/schema-ast": "^4.0.2",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "5.4.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint 'src/**/*.{ts,tsx}' --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
